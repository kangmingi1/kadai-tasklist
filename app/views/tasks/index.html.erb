<h1>タスクリスト一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped col-xs-12 col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>メッセージ</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= paginate @tasks %>
  </div>
<% end %>

<%= link_to '新規メッセージの投稿', new_task_path, class: "btn btn-primary" %>
